	<insert id="create">
		INSERT INTO spendings(
			id,
			category_id,
			amount,
			user_id
		) VALUES (
			#{id},
			#{categoryId},
			#{amount},
			#{userId}
		)
	</insert>
	<update id="edit">
		UPDATE spendings SET
			category_id = #{categoryId},
			amount = #{amount},
			user_id = #{userId},
			updated_at = NOW()
		WHERE
			id = #{id}
	</update>
